{
  "name": "devet-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "dev:web": "pnpm --filter devet-web dev",
    "dev:api": "pnpm --filter devet-api dev",
    "build": "pnpm --recursive --filter \"./apps/*\" build",
    "build:web": "pnpm --filter devet-web build",
    "build:api": "pnpm --filter devet-api build",
    "start:web": "pnpm --filter devet-web start",
    "start:api": "pnpm --filter devet-api start",
    "lint": "pnpm --recursive lint",
    "test": "pnpm --recursive test",
    "clean": "pnpm --recursive exec rm -rf node_modules dist .next out"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
